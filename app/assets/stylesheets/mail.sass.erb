@import "compass"
@import "compass/reset"
@import "sprites"

$usercolours: #0099CC, #562573, #FF8800, #669900, #99CC00

@mixin avatar($max)
  width: $max
  height: $max

  img
    max-height: $max
    max-width: $max

body
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size: 14px
  line-height: 20px
  color: #333
  //background-color: #F5F4F2

a
  color: #08C
  text-decoration: none

  &:hover
    color: #005580
    text-decoration: underline

  &:hover, &:active
    outline: 0

.clear
  clear: both

.avatar
  display: inline-block
  text-align: center

  &.small
    @include avatar(35px)

  &.big
    @include avatar(140px)

  &.thumb
    @include avatar(20px)

.footnote
  float: right
  margin-top: 5px
  font-size: 12px
  text-align: right

.container
  margin: 5px auto

  .message
    position: relative
    min-height: 60px
    background: #FFFFFF
    border: 1px solid rgba(0, 0, 0, 0.1)

    .avatar
      float: left
      padding: 0 5px

    .info
      margin-left: 40px
      padding: 0 10px

      .username
        color: #363636
        font-weight: bold

      .time
        color: #888
        font-size: 12px

    .contents
      padding: 5px
      overflow: hidden
      word-wrap:  break-word    

    @for $i from 1 through length($usercolours)
      $value: nth($usercolours, $i)
      &.user#{$i}
        border-top: 2px solid rgba($value, 0.15)
