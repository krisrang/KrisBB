@import "compass/css3/border-radius"
@import "smilies/*.png"
@include all-smilies-sprites

.btn-large [class^="smilies-"]
  margin-top: 1px

[class^="smilies-"],
[class*=" smilies-"]
  vertical-align: middle
  display: inline-block
  width: 20px
  height: 20px
  line-height: 20px
  vertical-align: text-top
  background-repeat: no-repeat

.form-horizontal
  .control-label
    width: 160px

  .controls
    margin-left: 170px

@media (max-width: 979px)
  body
    padding-top: 0

@media (max-width: 600px)
  .pagination a,
  .pagination span
    padding: 0 10px

  .form-page
    width: auto
    margin: 10px auto 0

  .form-horizontal .controls
    margin-left: 0

  .form-horizontal .control-group.boolean
    > label
      display: inline

    > div.controls
      display: inline
      margin-left: 5px
