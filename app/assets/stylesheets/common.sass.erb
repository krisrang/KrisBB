@import "compass/css3/border-radius"
@import "smilies/*.png"
@include all-smilies-sprites

.btn
  @include border-radius(2px)

.btn-large [class^="smilies-"]
  margin-top: 1px

[class^="smilies-"],
[class*=" smilies-"]
  vertical-align: middle
  display: inline-block
  width: 16px
  height: 16px
  line-height: 16px
  vertical-align: text-top
  background-repeat: no-repeat

.smilies-lol
  width: 39px
  height: 15px
  background: url(<%= asset_path "smilies/lol.gif" %>) no-repeat

\::-webkit-input-placeholder
  color: #666

\::-moz-placeholder
  color: #666

select,
textarea,
input[type="text"],
input[type="password"],
input[type="datetime"],
input[type="datetime-local"],
input[type="date"],
input[type="month"],
input[type="time"],
input[type="week"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="search"],
input[type="tel"],
input[type="color"],
.uneditable-input
  color: #444


.navbar .dropdown-menu
  font-size: 14px

.form-horizontal
  .control-label
    width: 160px

  .controls
    margin-left: 170px

.form-page
  width: 550px
  margin: 50px auto 0

.alert
  @include border-radius(2px)

@media (max-width: 480px)
  .form-page
    width: auto
    margin: 10px auto 0

  .form-horizontal .controls
    margin-left: 0

  .form-horizontal .control-group.boolean
    > label
      display: inline

    > div.controls
      display: inline
      margin-left: 5px