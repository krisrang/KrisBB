@import "compass/css3/border-radius"
@import "smilies/*.png"
@include all-smilies-sprites

.btn-large [class^="smilies-"]
  margin-top: 1px

[class^="smilies-"],
[class*=" smilies-"]
  vertical-align: middle
  display: inline-block
  width: 16px
  height: 16px
  line-height: 16px
  vertical-align: text-top
  background-repeat: no-repeat

.smilies-lol 
  width: 39px
  height: 15px
  background: url(<%= asset_path "smilies/lol.gif" %>) no-repeat

\::-webkit-input-placeholder
  color: #666

\::-moz-placeholder
  color: #666

\::-webkit-scrollbar
  width: 10px
  height: 10px
  background: rgba(40,40,40,0.50)
  border-radius: 10px
 
\::-webkit-scrollbar:hover
  height: 18px
 
\::-webkit-scrollbar-button
  display: none
 
\::-webkit-scrollbar-track-piece
  background: transparent
 
\::-webkit-scrollbar-thumb:vertical
  height: 50px
  background: #333
  border-radius: 5px
 
\::-webkit-scrollbar-thumb:horizontal
  width: 50px
  background: #444
  border-radius: 10px

.navbar .dropdown-menu
  font-size: 14px

.form-horizontal
  .control-label
    width: 160px
  
  .controls
    margin-left: 170px

.alert
  @include border-radius(2px)
