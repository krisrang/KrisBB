@import "compass/css3/border-radius"
@import "smilies/*.png"
@include all-smilies-sprites

.btn-large [class^="smilies-"]
  margin-top: 1px

[class^="smilies-"],
[class*=" smilies-"]
  vertical-align: middle
  display: inline-block
  width: 16px
  height: 16px
  line-height: 16px
  vertical-align: text-top
  background-repeat: no-repeat

.smilies-lol
  width: 39px
  height: 15px
  background: url(<%= asset_path "smilies/lol.gif" %>) no-repeat

.form-horizontal
  .control-label
    width: 160px

  .controls
    margin-left: 170px

.form-page
  width: 550px
  margin: 0 auto

@media (max-width: 600px)
  body
    padding-top: 0

  .form-page
    width: auto
    margin: 10px auto 0

  .form-horizontal .controls
    margin-left: 0

  .form-horizontal .control-group.boolean
    > label
      display: inline

    > div.controls
      display: inline
      margin-left: 5px