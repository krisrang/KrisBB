html,
body
  margin: 0
  padding: 0
  width: 100%
  height: 100%

#main
  position: fixed
  top: 60px
  left: 10px
  bottom: 0
  right: 10px

.user-menu
  img
    height: 20px

table.users
  td
    vertical-align: middle

    &.online_bit
      text-align: right

.user-messages
  margin-left: 160px
  min-height: 200px

  table
    td.message
      width: 100%

.user-controls
  float: left

ul.messages
  position: fixed
  top: 60px
  left: 20px
  bottom: 60px
  right: 300px
  padding: 0
  overflow: auto


  li
    position: relative
    border-left: 185px solid #181b1d
    padding: 0

    &.timeskip
      border-left: none
      border-top: 2px solid #1F637C
      background: #23282B
      color: #C2D9DD
      padding: 5px 10px
      text-align: center

    .username,
    .message,
    .time
      padding: 10px 5px

    .username
      margin-left: -185px
      padding: 5px
      float: left
      width: 180px
      color: #EEE

    .message
      padding: 5px
      border-left: 1px solid #33B5E5

    .time
      position: absolute
      padding: 5px
      top: 0
      right: 0
      width: 85px
      color: #666
      font-size: 12px

#sidebar
  position: fixed
  width: 240px
  top: 60px
  bottom: 0
  right: 20px

