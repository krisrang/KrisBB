$usercolours: #0099CC, #562573, #FF8800, #669900, #99CC00

@mixin avatar($max)
  max-height: $max
  max-width: $max

.avatar
  display: inline-block
  padding: 0 5px

  &.small
    width: 35px
    height: 35px

    img
      max-height: 35px
      max-width: 35px

  &.big
    width: 140px
    height: 140px

    img
      max-height: 140px
      max-width: 140px

  &.thumb
    width: 20px
    height: 20px

    img
      max-height: 20px
      max-width: 20px

table.users
  td
    vertical-align: middle

    &:last-child
      text-align: right

