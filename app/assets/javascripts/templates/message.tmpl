<li id="message-<%= _id %>" class="user<%= user.colour %>">
  <i class="avatar small">
    <img src="<%= user.avatar.small.url %>" />
  </i>
  <div class="info">
    <span class="username">
      <a href="<%= routes.user_path(user) %>"><%= user.username %></a>
      <i class="online-bit" data-user="<%= user.id %>"></i>
    </span>
    <span class="time">
      <time class="timeago" datetime="<%= created_at %>">
        <%= created_at %>
      </time>
    </span>
  </div>
  <div class="contents">
    <%= html %>
  </div>
</li>
