<i class="avatar small">
  <img src="<%= @user.avatar.small.url %>" />
</i>
<div class="info">
  <span class="username">
    <% if @user.deleted: %>
    <%= @user.username %>
    <% else: %>
    <a href="<%= @routes.user_path(@user._id) %>"><%= @user.username %></a>
    <% end %>
    <i class="online-bit" data-user="<%= @user.id %>"></i>
  </span>
  <span class="time">
    <time class="timeago" datetime="<%= @created_at %>">
      <%= @created_at %>
    </time>
  </span>
</div>
<div class="contents">
  <%- @html %>
</div>
