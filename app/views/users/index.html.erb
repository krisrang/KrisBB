<div class="well">
  <h2>Users</h2>
  <table class="users table table-striped">
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <img src="<%= user.avatar.thumb.url %>" />
          <strong><%= link_to user.username, user_path(user) %></strong>
        </td>
        <td><a><strong><%= user.messages.count %></strong> posts</a></td>
        <td class="online_bit"><%= online_bit user %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>