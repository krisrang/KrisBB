<ul id="bb-messages" class="unstyled messages bb">
  <% @messages.each do |message| %>
  <li id="message-<%= message.id %>" class="user<%= message.user.colour %>">
    <%= avatar message.user, :small %>
    <div class="info">
      <span class="username">
        <%= link_to message.user.username, user_path(message.user) %>
        <%= online_bit(message.user) %>
      </span>
      <span class="time">
        <time class="timeago" datetime="<%= message.created_at %>">
          <%= message.created_at.to_s :long_ordinal %>
        </time>
      </span>
    </div>
    <div class="contents">
      <%= raw message.html %>
    </div>
  </li>
  <% end %>
</ul>

<div id="bb-sendbox" class="send-message span12"></div>
