<div id="send-message">
  <div id="messagebox">
    <textarea id="message_text"></textarea>
  </div>
  <button type="submit" id="commit" class="btn btn-primary">
    <i class="icon-comment icon-white"></i>
  </button>
</div>

<ul id="bb-messages" class="unstyled messages">
  <% @messages.each do |message| %>
  <li id="message-<%= message.id %>" class="user<%= message.user.colour %>">
    <%= avatar message.user, :small %>
    <div class="info">
      <%= message.user.username %>
      <span class="time">
        Posted
        <time class="timeago" datetime="<%= message.created_at %>">
          <%= message.created_at.to_s :long_ordinal %>
        </time>
      </span>
    </div>
    <div class="contents">
      <%= raw message.html %>
    </div>
  </li>
  <% end %>
</ul>

<%= link_to "Older messages", messages_path, class: "archive-link" %>
