<!DOCTYPE html>
<html class="no-js">
<head>
  <title>KrisBB</title>
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">

        <ul class="nav pull-right">
          <li class="user-menu">
             <a href="<%= user_path(current_user) %>">
              <%= avatar current_user, :thumb %>
              <strong><%= current_user.username %></strong>
            </a>
          </li>
          <li class="dropdown">
            <a href="" class="dropdown-toggle" data-toggle="dropdown"><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to raw('<i class="icon-wrench"></i>') + " Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to raw('<i class="icon-list-alt"></i>') + " Users", users_path %></li>
              <li class="divider"></li>
              <li><%= link_to raw('<i class="icon-off"></i>') + " Log out",
                logout_path, method: :delete, "data-confirm" => "You sure?" %></li>
            </ul>
          </li>
        </ul>

        <a class="brand" href="/">KrisBB</a>
        <ul class="nav">
          <li><a href="/">Archive</a></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <%= bootstrap_flash %>
    </div>
    <div class="row">
      <div class="span2">
        <!--Sidebar content-->
      </div>
      <div class="span10">
        <%= yield %>
      </div>
    </div>
  </div>

  <script>
    window.settings = <%= raw Settings.public.to_json %>;
    window.user = <%= raw current_user.to_json %>;
  </script>
  <%= requirejs_include_tag "app" %>
</body>
</html>
