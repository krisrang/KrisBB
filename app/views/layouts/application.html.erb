<!DOCTYPE html>
<html>
<head>
  <title>KrisBB</title>
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">

        <ul class="nav pull-right">
          <li class="user-menu">
             <a href="<%= user_path(current_user) %>">
              <img src="<%= current_user.avatar.thumb.url %>" />
              <strong><%= current_user.username %></strong>
            </a>
          </li>
          <li class="dropdown">
            <a href="" class="dropdown-toggle" data-toggle="dropdown"><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to raw('<i class="icon-wrench"></i>') + " Settings", edit_user_path(current_user) %></li>            
              <li class="divider"></li>
              <li><%= link_to raw('<i class="icon-list-alt"></i>') + " Users", users_path %></li>
              <li class="divider"></li>            
              <li><%= link_to raw('<i class="icon-off"></i>') + " Log out", logout_path, method: :delete, confirm: "You sure?" %></li>
            </ul>
          </li>
        </ul>

        <a class="brand" href="/">KrisBB</a>
      </div>
    </div>
  </div>

  <div id="main">
    <%= render_flash %>

    <%= yield %>
  </div>

  <script>
    window.flash = <%= raw flash.to_json %>;
    window.settings = <%= raw Settings.to_json %>;
    window.user = <%= raw current_user.to_json %>;
  </script>
  <%= javascript_include_tag "application" %>
</body>
</html>
