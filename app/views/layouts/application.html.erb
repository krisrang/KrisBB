<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>KrisBB</title>
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "application" %>
</head>
<body>

<%= render partial: 'shared/message_dialog' %>

<div class="topbar">
  <div class="fill">
    <div class="container">
      <ul class="nav">
        <li>
          <button class="btn primary small" data-controls-modal="message-modal" data-backdrop="true">New Message</button>
        </li>
        <!--
        <li>
          <form id="searchform" action="">
            <input class="input-small" type="text" placeholder="Search">
          </form>
        </li>
        -->
      </ul>      

      <i class="icon-bubble"></i>

      <ul class="nav secondary-nav">
        <li class="dropdown" data-dropdown="dropdown">
          <a href="#" class="dropdown-toggle"><span class="icon-wrapper"><i class="icon-user"></i></span></a>
          <ul class="dropdown-menu">
            <li class="username"><%= link_to current_user.username, user_path(current_user) %></li>
            <!--
            <% if current_user.admin %>
            <li class="divider"></li>
            <li><%= link_to "Users", users_path %></li>
            <% end %>
            <li class="divider"></li>
            <li><%= link_to "Settings", "" %></li>
            -->
            <li><%= link_to "Log out", logout_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="main container">
  <%= yield %>
</div>

<script>
  window.settings = <%= raw Settings.to_json %>;
  window.user = <%= raw current_user.to_json %>;
</script>
<%= javascript_include_tag "application", "krisbb" %>
<%= render partial: 'shared/bottom_include' %>
</body>
</html>
