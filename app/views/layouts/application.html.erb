<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>KrisBB</title>
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  
  <meta name="viewport" content="width=device-width" />
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "application" %>
</head>
<body>

<%= render partial: 'shared/message_dialog' %>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
          <% if current_page? root_path %>
          <a class="btn btn-primary small" data-toggle="modal" data-target="#message-modal" data-backdrop="true">New Message</a>
          <% else %>
          <a class="btn btn-primary small" href="/">Messages</a>
          <% end %>  

      <i class="icon-bubble"></i>

      <ul class="nav pull-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i><b class="caret"></b></a>
          <ul class="dropdown-menu user-menu">
            <li class="useritem">
              <a href="<%= user_path(current_user) %>">
                <div class="avatar"><img src="<%= current_user.avatar.thumb.url %>" /></div>
                <strong><%= current_user.username %></strong>
                <small>View my profile</small>
              </a>
            </li>
            <li class="divider"></li>
            <li><%= link_to "Users", users_path %></li>
            <li class="divider"></li>            
            <li><%= link_to "Log out", logout_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="main container">
  <%= render_flash %>

  <%= yield %>
</div>

<script>
  window.settings = <%= raw Settings.to_json %>;
  window.user = <%= raw current_user.to_json %>;
</script>
<%= javascript_include_tag "application", "krisbb", "http://js.pusherapp.com/1.10/pusher.min.js" %>
<%= render partial: 'shared/bottom_include' %>
</body>
</html>
