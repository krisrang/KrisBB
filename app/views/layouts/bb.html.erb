<!DOCTYPE html>
<html class="no-js">
<head>
  <title>KrisBB</title>
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class="bb">
  <%= render partial: "layouts/nav" %>

  <div class="container">
    <div class="row">
      <div class="span12">
        <%= bootstrap_flash %>
        <%= yield %>
      </div>
    </div>
  </div>

  <%= requirejs_include_tag "app" %>
  <script>
    define("setup", [], function() {
      return {
        messages: <%= raw @messages.to_json %>,
        settings: <%= raw Settings.public.to_json %>,
        user: <%= raw current_user.to_json %>
      };
    });
  </script>
</body>
</html>
